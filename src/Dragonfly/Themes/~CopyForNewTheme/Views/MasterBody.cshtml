@using System.Web.Mvc.Html
@using Dragonfly.UmbracoTheming
@using Umbraco.Web
@using Umbraco.Web.Mvc

@inherits UmbracoTemplatePage
@{
    Layout = "MasterHead.cshtml";

    var thisTheme = Model.Content.GetPropertyValue<string>("SiteTheme", recurse: true);
}

@section HeaderScripts
{
    @RenderSection("HeaderScripts", required: false)
}

<body class="BodyCss">
    @{ Html.RenderPartial("~/Views/Partials/GenricPartial.cshtml"); }

    <div class="page">
        <div class="wrap">
            <header>
                <a href="Site.Url" class="logo pull-left">Home</a>

                @Html.ThemedPartial(thisTheme, "Nav_Main", Model)

            </header>

            <p><b>NOTE:</b> All Site Design Templates should be created in the appropriate '/Themes/' folder.</p>

            @RenderBody() @*CHILD TEMPLATE BODY HERE*@

        </div>

        <footer>
            <div class="container">
                @Html.ThemedPartial(thisTheme, "Nav_Footer", Model)
            </div>
        </footer>
    </div>

    <div class="media-modal modal fade">
        <span class="close"></span>
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-inner">

                </div>

            </div>
        </div>
    </div>

    <!-- Page footer Js -->
    @RenderSection("FooterScripts", required: false)

</body>